<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView style="@style/CardView.Light"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">



        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Title of a news)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/ShortDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Desc of a News.Desc of a NewsDesc of a NewsDesc of a News"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


        <TextView
            android:id="@+id/Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ShortDesc"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Link : https://bit.ly/sasa9sj"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/Link"
            android:layout_alignParentRight="true"
            android:text="20/4/2018"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
    </RelativeLayout>

</LinearLayout>
</android.support.v7.widget.CardView>
